alias k = "kubectl" # crea un alias para el comando kubectl

k get pods # Lista los pods creados

kubectl get Pods -o wide # Lista los pods creados con información extendida

k run nginx --image=nginx # Crea un pod con un contenedor de nginx

k describe pods nginx # Optiene información detallada sobre el pod

k delete pods/nginx # Elimina el pod

k get pods nginx -o yaml # Optiene la información del pod el formato YAML

k get pods nginx -o json # Optiene la información del pod el formato JSON

k apply -f pod.yaml # Crea un pod a partir de un archivo YAML

k delete -f pod.yaml # Elimina un pod a partir de un archivo YAML

# Comandos para debugear

k port-forward Pod/nginx-Pods 8080:80 # Hace un forwarding de puertos para Debugger

k logs Pod/nginx # Permite leer los logs del contenedor

k exec -ti Pods nginx-Pod -- bash # Permite ejecutar un comando dentro del contenedor

# Namespace

k create namespace test # Crea un namespace

k run nginx –image=nginx -n test # Crea un pod en un namespace

# ConfigMap

k get cm # Lista los ConfigMaps
